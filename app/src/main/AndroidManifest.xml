<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.angeliur.scrollerandlistview">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".scroller.ScrollerTestActivity"/>
        <activity android:name=".scroller.DragViewTestActivity"/>
        <activity android:name=".scroller.DragViewGroupTestActivity"/>

        <activity android:name=".listview.ListviewTestActivity"/>
        <activity android:name=".listview.FocusListViewTest"/>
        <activity android:name=".listview.ScrollHideListViewTest"/>
        <activity android:name=".listview.ChatItemListViewTest"/>
        <activity android:name=".listview.FlexibleListViewTest"/>
        <activity android:name=".listview.NotifyTest"/>
    </application>

</manifest>